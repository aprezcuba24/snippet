{
  "name": "electron-angular-boilerplate",
  "productName": "Electron Angular Boilerplate",
  "description": "Boilerplate for Angular2 apps with electron",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Liam Stokinger",
  "main": "main.js",
  "scripts": {
    "tsc": "tsc --outDir 'dist/server-temp' -p tsconfig.electron.json && rm -rf dist/server && mkdir dist/server && cp -r dist/server-temp/src/server/* dist/server && rm -rf dist/environments && mkdir dist/environments && cp -r dist/server-temp/src/environments/* dist/environments  && rm -rf dist/server-temp/",
    "build-electron": "ng build --base-href . && npm run tsc",
    "start": "npm run build-electron && electron main.js",
    "package-mac": "npm run build-electron && electron-packager . --overwrite --asar=true --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "package-windows": "npm run build-electron && electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --prune=true --out=release-builds",
    "package-linux": "npm run build-electron && electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=release-builds",
    "create-installer-mac": "electron-installer-dmg ./release-builds/Electron\\ Angular\\ Boilerplate-darwin-x64/Electron\\ Angular\\ Boilerplate.app electron-boilerplate-app --out=release-builds --overwrite",
    "create-installer-windows": "node installers/windows/createinstaller.js",
    "full-build-mac": "npm run build-electron && npm run package-mac && npm run create-installer-mac",
    "full-build-windows": "npm run build-electron && npm run package-windows && npm run create-installer-windows",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/node": "^6.0.86",
    "camo": "^0.12.3",
    "core-js": "^2.4.1",
    "marked": "^0.3.6",
    "mongod": "^2.0.0",
    "mongodb": "^2.0.42",
    "ngx-pagination": "^3.0.1",
    "prismjs": "^1.6.0",
    "rxjs": "^5.1.0",
    "select2": "^4.0.3",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.3.0",
    "@angular/compiler-cli": "^4.3.4",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "electron": "^1.6.2",
    "electron-installer-dmg": "^0.2.1",
    "electron-packager": "^8.6.0",
    "electron-winstaller": "^2.5.2",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ngrx-store-logger": "^0.2.0",
    "protractor": "~5.1.0",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.2.0"
  },
  "optionalDependencies": {
    "camo": "^0.12.3"
  }
}
